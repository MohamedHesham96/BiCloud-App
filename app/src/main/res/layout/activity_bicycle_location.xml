<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.h.cloudcycle.BicycleLocation"
>

    <TextView
        android:id="@+id/bicycle_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="129dp"
        android:text="Code"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/bicycle_location"
        />

    <TextView
        android:id="@+id/bicycle_location"
        android:layout_width="358dp"
        android:layout_height="148dp" android:text="Location"
        android:textSize="30sp" android:textStyle="bold"
        />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="-1dp"
        android:text="Unlock" android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/bicycle_code"/>

</android.support.constraint.ConstraintLayout>
