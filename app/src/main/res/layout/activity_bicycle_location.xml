<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:paddingTop="30dp"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    android:orientation="vertical"
    tools:context="com.example.h.cloudcycle.BicycleLocation">


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_dialog"
        android:src="@drawable/bicycle_64" />

    <TextView
        android:padding="8dp"
        android:id="@+id/bicycle_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="#a1a1a1"
        android:text="Bike Details:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="#a1a1a1"
        android:text="User Details:\nUser ID:\nName:\nEmail"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:padding="8dp"
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_all_blue"
        android:text="Unlock"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/complain_BT"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="openComplainsMenu"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal|left"
        android:background="@drawable/complain" />

</LinearLayout>

