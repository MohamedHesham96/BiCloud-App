<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.h.cloudcycle.EnterNewPassword">


    <EditText
        android:drawableStart="@drawable/password_icon"
        android:drawablePadding="8dp"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:layout_marginTop="60dp"
        android:hint="Password"
        android:id="@+id/password"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:layout_width="@dimen/width_login"
        android:background="@drawable/rounded"
        android:inputType="textPassword" />

    <!--  Password Label -->
    <EditText
        android:hint="Repeat - Password"
        android:drawableStart="@drawable/password_icon"
        android:drawablePadding="8dp"
        android:id="@+id/repeat_password"
        android:layout_gravity="center"
        android:layout_width="@dimen/width_login"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:background="@drawable/rounded1"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/submit_new_password"
        android:layout_gravity="center"
        android:layout_width="@dimen/width_login"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded2"
        android:textColor="#ffffff"
        android:onClick="submitPassword"
        android:padding="12dp"
        android:text="Submit New Password" />

</LinearLayout>
