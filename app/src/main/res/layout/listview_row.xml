<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
>

    <ImageView
        android:id="@+id/historyIcon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        app:srcCompat="@drawable/bicycle_64"/>


    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/historyIcon"
        android:orientation="vertical">

        <TextView android:id="@+id/H_price"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Price: 2$"
                  android:textSize="16sp"
                  android:textStyle="bold"/>

        <TextView
            android:id="@+id/H_BikeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bike ID: #2212"
            android:textSize="14sp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/firstLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/secondLayout"
        android:orientation="vertical">


        <TextView android:id="@+id/H_distance"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="8dp"
                  android:text="Distance: 4.0 KM"
                  android:textSize="16sp" android:textStyle="bold"/>

        <TextView android:id="@+id/H_date"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="8dp"
                  android:text="Date: 30/12/2018"
                  android:textSize="14sp"/>


    </LinearLayout>


</RelativeLayout>