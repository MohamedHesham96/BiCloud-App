<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
>

    <ImageView
        android:id="@+id/historyIcon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="false"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"

        android:src="@drawable/bicycle_64"
        android:contentDescription="@string/todo"/>


    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/historyIcon"
        android:orientation="vertical">

        <TextView android:id="@+id/H_price"
                  android:textColor="#000000"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/price_2"
                  android:textSize="16sp"
                  android:textStyle="bold"/>

        <TextView
            android:textColor="#000000"
            android:id="@+id/H_BikeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bike_id_2212"
            android:textSize="14sp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/firstLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/secondLayout"
        android:orientation="vertical">


        <TextView android:id="@+id/H_distance"
                  android:textColor="#000000"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="8dp"
                  android:text="@string/distance_4_0_km"
                  android:textSize="16sp" android:textStyle="bold"/>

        <TextView android:id="@+id/H_date"
                  android:textColor="#000000"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="8dp"
                  android:text="@string/date_30_12_2018"
                  android:textSize="14sp"/>


    </LinearLayout>


</RelativeLayout>